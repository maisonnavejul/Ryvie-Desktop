{
  "name": "ryvie-desktop",
  "version": "0.0.4",
  "description": "Application desktop pour Ryvie avec d√©tection de connexion locale/publique",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "npm run icons:win && electron-builder --win",
    "icons:win": "node scripts/generate-icon.js"
  },
  "keywords": ["ryvie", "electron", "desktop"],
  "author": "Ryvie",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.33.5"
  },
  "build": {
    "appId": "com.ryvie.desktop",
    "productName": "Ryvie",
    "win": {
      "target": "nsis",
      "icon": "build/icons/win/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
